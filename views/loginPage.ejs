<form class="form-horizontal" method="post">
    <fieldset>
        <legend>用户登入</legend>
        <div class="control-group">
            <label class="control-label" for="user_id">帐号</label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="user_id" name="user_id">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="user_pwd">口令</label>
